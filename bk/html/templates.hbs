
<div class="panel panel-default {{#if class}}{{class}}{{/if}}" {{#if style}}style="{{style}}"{{/if}}>
    <div class="panel-heading">
        {{#if addExport}}
            <div class="pull-right">
                <a class="btn btn-primary" data-role="export"><i class="fa fa-download"></i>  {{export}}</a>
            </div>
        {{/if}}
        <h5>{{title}}</h5>
        <h6>{{subtitle}}</h6>
    </div>
    <div class="panel-body">
        <div data-role="content" {{#if height}}style="height:{{height}}"{{/if}}></div>
    </div>
    {{#if footer}}
        <div class="panel-footer clearfix">{{{footer}}}</div>
    {{/if}}
</div>

<script type='text/x-handlebars-template' id='main_structure'>

    <div class="panel panel-default">
        <div class="panel-heading">
            <div role='tabpanel'>

                <div class='row'>
                    <div class='col-xs-10'>
                        <div class="fs-tab-holder">
                            <ul class='nav nav-tabs' role='tablist' id='{{tab_headers_id}}'></ul>
                        </div>
                    </div>
                    <div class='col-xs-2'>
                        {{#if has_coding_systems}}
                            <div class='btn-group pull-right'>

                                <button type='button' class='btn btn-default btn-xs dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
                                        <span style='margin-left: -5px;'>
                                            &nbsp;<i class='fa fa-cog'></i> <span class='caret'></span>
                                        </span>
                                </button>
                                <ul class='dropdown-menu' style='padding-left: 8px; padding-right: 8px;'>
                                    <li><b>{{conding_system}}Coding System</b></li>
                                    <li role='separator' class='divider'>

                                    </li>
                                    {{#each coding_systems}}
                                        <li>
                                            <div class='radio'>
                                                <label>
                                                    <input type='radio' name='coding_systems{{this.suffix}}' id='{{this.label}}' value='{{this.label}}' {{#if @first}}checked=''{{/if}}>
                                                    {{this.label}}
                                                </label>
                                            </div>
                                        </li>
                                    {{/each}}
                                </ul>

                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div class='tab-content' id='{{tab_contents_id}}'></div>
        </div>

        <div class="panel-footer">

            <div class="row">
                <div class='col-xs-5'>
                    <input class='form-control' placeholder='{{go_to_label}}' id='{{search_id}}'>
                </div>

                {{#if is_multiple_selection}}
                    <div class='col-xs-7'>
                        <div class="btn-group">
                        <button class='btn btn-default btn-sm truncate' type='submit' id='{{clear_all_button_id}}'>
                            {{clear_all_label}}
                        </button>
                        <button class='btn btn-default btn-sm truncate' type='submit' id='{{select_all_button_id}}'>
                            {{select_all_label}}
                        </button>
                        </div>
                    </div>
                {{/if}}
            </div>

            <div class='row'>
                <div class='col-xs-12 faostat-download-selector-resume-holder'>
                    <div id='{{summary_id}}' class='faostat-summary-item'>

                    </div>
                </div>
            </div>

        </div>

    </div>
</script>

<script type='text/x-handlebars-template' id='summary_item'>
    <div data-type='{{summary_item_type}}'
         id='{{summary_item_id}}'
         class='summary-item'
         data-code='{{summary_item_code}}'
         data-toggle='tooltip'
         data-box='{{box_id}}'
         data-tab='{{tab_id}}'
         title='{{click_to_remove_label}}'
         onclick='{{summary_item_click}}'>
        {{summary_item_label}}
    </div>
</script>

<script type='text/x-handlebars-template' id='tab_header_structure'>
    <li role='{{role_id}}'>
        <a href='#{{role_id}}' aria-controls='{{role_id}}' role='tab' data-toggle='tab'>
            {{tab_header_label}}
        </a>
    </li>
</script>

<script type='text/x-handlebars-template' id='tab_content_structure'>
    <div role='tabpanel' class='tab-pane fade' id='{{id}}'>
        <div id='{{content_id}}' style='height: 150px; width: 100%; overflow-y: auto; overflow-x: hidden;'></div>
    </div>
</script>